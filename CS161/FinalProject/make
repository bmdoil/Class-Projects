CXX = g++
CXXFLAGS = -std=c++0x
CXXFLAGS += -Wall
CXXFLAGS += -pedantic-errors

OBJS = Book.o Library.o Patron.o mainLib.o

SRCS = Book.cpp Library.cpp Patron.cpp

HEADERS = Book.hpp Library.hpp Patron.hpp

TARGET = mainLib

${TARGET}: ${SRCS} ${HEADERS}
	${CXX} ${CXXFLAGS} ${SRCS} -o ${TARGET}

clean: 
	${RM} ${TARGET} *.o *~
